<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".RewardDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rewardImageTv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_verified" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical"><TextView
            android:id="@+id/rewardDescriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Description"
            android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pointIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_plant" />
                <TextView
                    android:id="@+id/rewardPointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reward Points"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expiryIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_expired" />

                <TextView
                    android:id="@+id/rewardExpiryDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reward Expiry Date"
                    android:textSize="18sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/rewardTouTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward TOU"
                android:textStyle="italic"
                android:textSize="18sp" /></LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>